@model CalculatorMVC.Models.PropCalcu
@{
    ViewBag.Titel = "myFirstCalucltoMVC";

}
<html>
<head>
   <link href="/Content/bootstrap.css" rel="stylesheet"
</head>
<Body>
    <h1>My Simple Calculator</h1>
    <div class="row"></div>
    @using (Html.BeginForm("Index", "PropCalcu", FormMethod.Post))
    {
        <div class="form-group">
            <p for="First"></p>
            <input type="text" class="from-control" id="FirstNum" name="FirstNum" value="@Model.FirstNum" />
        </div>

        <div class="form-group">
            <lebel for="SecondNum"></lebel>
            <input type="text" class="from-control" id="SecondNum" name="SecondNum" value="@Model.SecondNum" />
        </div>

        <div class="form-group">
            <lebel for="Total"></lebel>
            <input type="text" class="from-control" id="Totals" name="Totals" value="@Model.Totals" />
        </div>
        <button type="submit" class="btn btn-warning" id="Add" value="Add" name="calculate">+</button>
        <button type="submit" class="btn btn-danger" id="Minus" value="Minus" name="calculate">-</button>
        <button type="submit" class="btn btn-info" id="Multy" value="Multy" name="calculate">*</button>
        <button type="submit" class="btn btn-group" id="Devide" value="Devide" name="calculate">/</button>
    }
</Body>
</html>
