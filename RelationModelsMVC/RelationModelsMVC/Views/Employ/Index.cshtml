@model IEnumerable<RelationModelsMVC.Models.Employ>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee</h1>

<p class="btn btn-outline-primary">
    <a asp-action ="Create">Create New</a>
</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'">Edit</button>
                    <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Details", new { id = item.Id,item.Position,item.Department})'">Details</button>
                    <a href="~/Employ/Delete?id=@item.Id" id="deleteBtn" class="btn btn-outline-primary" onclick="return confirm('Are you sure you want to delete?');"><i class="fas fa-trash-alt text-white"></i>Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
