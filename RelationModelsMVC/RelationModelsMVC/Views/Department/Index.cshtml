@model IEnumerable<RelationModelsMVC.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Department</h1>

<p>
 
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create new"</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                   @Html.DisplayFor(modelItem => item.Id)
                     @* @Html.Hidden("Id" item.Id) *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <td>                 
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'">Edit</button>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details", new { id = item.Id})'">Details</button>
                    <a href="~/Department/Delete?id=@item.Id" id="deleteBtn" class="btn bg-danger mr-1" onclick="return confirm('Are you sure you want to delete?');"><i class="fas fa-trash-alt text-white"></i>Delete</a>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
